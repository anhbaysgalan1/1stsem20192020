<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="280dip"
    android:layout_height="170dip"
    android:layout_marginRight="10dip"
    android:elevation="4dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/border_shadow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="260dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip">

                <TextView
                    android:id="@+id/company_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Sample Tow Company"
                    android:textColor="#ff222222"
                    android:textSize="20sp" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:textSize="13sp"
            android:id="@+id/company_address"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="San Carlos, Talamban" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="3dip"
                android:src="@drawable/ic_icondistance"
                android:scaleType="center"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/white" />

            <TextView
                android:textSize="17sp"
                android:textColor="#ff222222"
                android:id="@+id/distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:text="400 meters"
                android:layout_toEndOf="@id/location_icon" />
        </RelativeLayout>


        <Button
            android:id="@+id/btn_reserve"
            android:layout_width="200dp"
            android:layout_height="30.0dip"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/orangebutton_log"
            android:text="Reserve"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        <Button
            android:textColor="@color/white"
            android:id="@+id/btn_locate"
            android:layout_gravity="center"
            android:layout_below="@+id/btn_reserve"
            android:background="@drawable/orangebutton_log"
            android:layout_width="200.0dip"
            android:layout_height="30.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Locate"
            android:textAllCaps="false" />
    </LinearLayout>
</FrameLayout>